%a{:name => 'about'}
.intro-header
  .container
    .row
      .col-lg-12
        .intro-message
          %h1 Expense Report App
          %h3 Track All Your Expenses!
          %hr.intro-divider
            - if user_signed_in?
              .col-md-12
                = link_to 'View Expenses', expenses_path
            - else
              .col-md-3.col-md-offset-3
                = link_to 'Sign Up',  new_user_session_path
              .col-md-3
                = link_to 'Sign In',  new_user_session_path